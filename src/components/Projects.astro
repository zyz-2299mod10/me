---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-white">
      <div class="space-y-8 sm:space-y-12">
        <div class="flex items-center gap-4">
          <div
            class="w-1.5 h-8 sm:h-10 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">
            Projects
          </h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
          {siteConfig.projects.map((project, index) => {
            const Component = project.link ? "a" : "div";
            const linkProps = project.link
              ? {
                  href: project.link,
                  target: "_blank",
                  rel: "noopener noreferrer",
                }
              : {};

            return (
              <div class="group relative flex">
                <Component
                  {...linkProps}
                  class={`block relative p-6 sm:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 w-full hover:-translate-y-1 ${
                    project.link
                      ? "hover:bg-white hover:shadow-xl hover:border-gray-300"
                      : ""
                  }`}
                >
                  {project.link && (
                    <div class="absolute top-6 right-6 w-10 h-10 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700 opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0">
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M7 17L17 7M17 7H7M17 7V17"
                        />
                      </svg>
                    </div>
                  )}

                  <div class="space-y-4">
                    <div>
                      <span
                        class="text-sm font-mono"
                        style={{ color: siteConfig.accentColor }}
                      >
                        0{index + 1}
                      </span>
                      <h3 class="text-xl font-bold text-gray-900 mt-1">
                        {project.name}
                      </h3>
                    </div>

                    <p
                      class="text-base text-gray-600 leading-relaxed"
                    >
                      {project.description}
                    </p>

                    {project.skills && project.skills.length > 0 && (
                      <div class="flex flex-wrap gap-2 pt-2">
                        {project.skills.map((skill) => (
                          <span
                            class={`px-3 py-1 bg-gray-900 text-white rounded-lg text-sm font-medium transition-all duration-300 ${
                              project.link ? "group-hover:bg-gray-800" : ""
                            }`}
                          >
                            {skill}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </Component>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )
}
