---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
  <div class="space-y-12">
    <div class="flex items-center gap-4">
      <div
        class="w-1.5 h-8 sm:h-10 rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      />
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">
        About Me
      </h2>
    </div>

    <div class="space-y-8">
      <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
        <div class="flex-1 space-y-8">
          <p class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-600">
            {siteConfig.aboutMe}
          </p>

          <div class="pt-4">
            <div class="flex flex-wrap gap-3">
              {
                siteConfig.skills.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-100 text-gray-800 rounded-full text-sm sm:text-base md:text-lg font-medium hover:bg-gray-200 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
        
        {siteConfig.aboutMePhoto && (
          <div class="w-full md:w-1/3 flex-shrink-0">
             <img 
               src={siteConfig.aboutMePhoto} 
               alt="About Me Photo" 
               class="w-full h-auto rounded-2xl object-cover shadow-lg aspect-square"
             />
          </div>
        )}
      </div>
    </div>
  </div>
</section>
